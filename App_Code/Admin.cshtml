@* Admin Functions *@ 
@functions {  
    public static bool CategoryExists(string categoryTitle){         
        var db = Database.Open("MjanjaData");         
        var sqlQuery = "SELECT categoryID FROM Categories WHERE categoryTitle = @0";         
        return db.Query(sqlQuery, categoryTitle).Count() > 0;     
    } 
             
    public static bool CategoryIsEmpty(string categoryId){         
        var db = Database.Open("MjanjaData");         
        var sqlQuery = "SELECT ProductID FROM Properties WHERE category = @0";         
        return db.Query(sqlQuery, categoryId).Count() == 0;     
    }

    public static bool Product(string productId){
        var db = Database.Open("MjanjaData");
        var sqlQuery = "SELECT ProductID FROM OrderItems WHERE ProductId = @0";
        return db.Query(sqlQuery,productId).Count() == 0;
    }
    
}
